  override function onCreate(args)
    m.x = args.x
    m.y = args.y
    m.xDirection = 1
    m.yDirection = 0
    m.grid = args.grid

    m.addRectangleCollider("snake_head", m.grid, m.grid, 0, 0)
  end function



